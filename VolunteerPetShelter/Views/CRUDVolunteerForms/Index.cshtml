@using VolunteerPetShelter.Models
@model IEnumerable<VolunteerPetShelter.Models.VolunteerForm>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>VolunteerRequest</title>
</head>
<body>

    <div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header"> Solicitudes voluntarios</h1>


                <div class="table-responsive">
                    <table class="table">

                        <thead>
                            <tr>

                                <th>
                                    @Html.DisplayNameFor(model => model.VolunteerFormID)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.LastName)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Birthdate)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Question1)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Question2)
                                </th>

                                <th>

                                </th>
                            </tr>
                        </thead>

                        @foreach (var item in Model)
                         {
                            <tr scope="row">
                                <td>
                                    @Html.DisplayFor(modelItem => item.VolunteerFormID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Birthdate)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Question1)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Question2)
                                </td>
                                <td>
                                    @*@Html.ActionLink("Edit", "Edit", new { id=item.ID }) |*@
                                    @Html.ActionLink("Detalles", "Details", new { id = item.ID }) |
                                    @Html.ActionLink("Eliminar", "Delete", new { id = item.ID })
                                </td>


                            </tr>
                         }

                    </table>

                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
    </div>
   

</body>
</html>
